<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_image_user"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/sample_ava"
        app:civ_border_color="#FF000000" />

    <TextView
        android:id="@+id/civ_name_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/civ_image_user"
        android:text="Đạt không chín"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/civ_time_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/civ_name_user"
        android:layout_toEndOf="@id/civ_image_user"
        android:text="30 min"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/iv_gigs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true" />

    <TextView
        android:id="@+id/tv_gigs_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_gigs"
        android:paddingTop="10dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />


    <RatingBar
        android:id="@+id/rb_gigs_star"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_gigs_title"
        android:isIndicator="true"
        android:numStars="5"
        android:paddingTop="5dp"
        android:stepSize="0.1" />

    <TextView
        android:id="@+id/tv_gigs_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rb_gigs_star"
        android:paddingTop="5dp"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_gigs_place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_gigs_number"
        android:paddingTop="5dp"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_gigs_place"
        android:paddingTop="5dp"
        android:text="Thursday, 13:00 20/12/2018"
        android:textColor="@color/black"
        android:textSize="15sp" />
</RelativeLayout>