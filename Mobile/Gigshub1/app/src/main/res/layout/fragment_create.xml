<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateFragment">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ll_create_top_bar"
        android:background="@color/white"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/ll_create_top_bar"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Create Event"
                android:textSize="20sp"
                android:fontFamily="@font/ropa_sans"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:layout_marginLeft="6dp"/>

        </LinearLayout>
        <View
            android:id="@+id/v_create_divider"
            android:layout_below="@+id/ll_create_top_bar"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            />
        <LinearLayout
            android:layout_below="@+id/v_create_divider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"

            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/tv_gigs_create_picture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Picture"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:id="@+id/ll_camera_create"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="10dp"
                    android:background="@drawable/background_orange_border">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_camera" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_create_gigs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/ll_camera_create" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_gigs_create_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Title"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_create_event_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Input your event title"
                android:maxLines="3" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Date"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_gigs_create_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="Tap to edit date of event" />

            <TextView
                android:id="@+id/tv_gigs_create_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Place"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_create_event_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ex: Quang Trung Software City"
                android:maxLines="1" />

            <TextView
                android:id="@+id/tv_gigs_create_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Description"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/et_create_event_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Input your event details"
                android:maxLines="10" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_create_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/background_orange_border"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_save"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:background="@drawable/ic_going" />

            <TextView
                android:id="@+id/tv_save_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ropa_sans"
                android:padding="10dp"
                android:text="Create Events"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>