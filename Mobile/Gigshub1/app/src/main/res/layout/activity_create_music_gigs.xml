<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CreateMusicGigsActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/create_gigs"/>
    <LinearLayout
        android:orientation="vertical"
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView

            android:layout_weight="8.5"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:weightSum="10"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:gravity="end"
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Gigs Name: "
                        android:textSize="16dp"
                        android:textColor="#000000"/>
                    <EditText
                        android:layout_weight="7"
                        android:id="@+id/txtGigsName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:weightSum="10"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:gravity="end"
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Title: "
                        android:textSize="16dp"
                        android:textColor="#000000"/>
                    <EditText
                        android:layout_weight="7"
                        android:id="@+id/txtTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:weightSum="10"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:gravity="end"
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Description: "
                        android:textSize="16dp"
                        android:textColor="#000000"/>
                    <EditText
                        android:layout_weight="7"
                        android:id="@+id/txtDescription"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:weightSum="10"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:gravity="end"
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Celebrities: "
                        android:textSize="16dp"
                        android:textColor="#000000"/>
                    <EditText
                        android:layout_weight="7"
                        android:id="@+id/txtCelebName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:weightSum="10"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:gravity="end"
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Place: "
                        android:textSize="16dp"
                        android:textColor="#000000"/>
                    <EditText
                        android:layout_weight="7"
                        android:id="@+id/txtPlace"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:weightSum="10"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:gravity="end"
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Date: "
                        android:textSize="16dp"
                        android:textColor="#000000"/>
                    <EditText
                        android:layout_weight="7"
                        android:id="@+id/txtDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:onClick="clickToShowDate"/>
                </LinearLayout>
                <LinearLayout
                    android:weightSum="10"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:gravity="end"
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Time: "
                        android:textSize="16dp"
                        android:textColor="#000000"/>
                    <EditText
                        android:layout_weight="7"
                        android:id="@+id/txtTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:onClick="clickToShowTime"/>
                </LinearLayout>
                <LinearLayout
                    android:weightSum="10"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:gravity="end"
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Image: "
                        android:textSize="16dp"
                        android:textColor="#000000"/>
                    <Button
                        android:layout_weight="7"
                        android:id="@+id/txtDatetime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:onClick="clickToAddImage"
                        android:text="Add Image"/>
                </LinearLayout>

                <!--<LinearLayout
                    android:weightSum="10"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:gravity="end"
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Image: "
                        android:textSize="16dp"
                        android:textColor="#000000"
                        android:visibility="invisible"/>
                    <ImageSwitcher
                        android:layout_weight="7"
                        android:id="@+id/imgSwitcher"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        />
                </LinearLayout> -->

            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:weightSum="9"
            android:orientation="horizontal"
            android:layout_weight="1.5"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <Button
                android:layout_margin="5dp"
                android:layout_weight="3"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Create"
                android:textColor="#ffffff"
                android:background="#ff8f00"
                android:textSize="16sp"
                android:onClick="clickToCreate"
                />
            <Button
                android:layout_margin="5dp"
                android:layout_weight="3"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Reset Form"
                android:textColor="#ffffff"
                android:background="#ff8f00"
                android:textSize="16sp"
                android:onClick="clickToResetForm"
                />
            <Button
                android:layout_margin="5dp"
                android:layout_weight="3"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:textColor="#ffffff"
                android:background="#ff8f00"
                android:textSize="16sp"
                android:onClick="clickToCancel"
                />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>